{
  "name": "Jira HotLinker",
  "description": "Jira HotLinker, quick access to Jira metadata when hovering over ticket numbers!",
  "version": "1.2",
  "manifest_version": 2,
  "icons": {
    "128": "icons/jiralink128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://github.com/*",
        "*://*.atlassian.net/rest/*",
        "*://docs.google.com/*"
      ],
      "run_at": "document_end",
      "css": [
        "src/content.css"
      ],
      "js": [
        "build/main.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "resources/*"
  ],
  "permissions": [
    "storage",
    "cookies"
  ],
  "options_ui": {
    "page": "options/options.html",
    "chrome_style": true
  }
}
